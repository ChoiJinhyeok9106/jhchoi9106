<script>
    $(document).ready(function() {
        // 마일리지 상세 펼치고, 닫침
        $('.table-type05 tbody tr').not('.hidden-tr').on('click', function() {            
            if ($(this).hasClass('active')) {
                $(this).next('.hidden-tr').removeClass('on');
                $(this).removeClass('active');
                
            } else {
                $('.table-type05 tr').removeClass('active');
               $('.table-type05 .hidden-tr').removeClass('on');
                $(this).next('.hidden-tr').addClass('on');
                $(this).not('.hidden-tr').addClass('active');
            }
        });
    });    
</script>