 var vm = new Vue({
    el: '#app',
    //사용할 데이터
    data: {
    	testMonth : null
    },
    //마운트 된 시점수행
    mounted: function(){
    	this.saveRow();
    },
    //함수
    methods: {
    	saveRow: function(){
    		var validate = this.$validator.validateAll();
            
            validate.then(function(response) {
            	if(response){
            		
            	}
            });
    	}
    }
});
/*******************************************************************************************************************************************************************
